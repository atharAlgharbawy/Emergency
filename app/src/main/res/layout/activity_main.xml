<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.win_7.Emergency2.MainActivity"
    android:orientation="vertical">


    <TextView
        android:text="Select Emergency case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/reset"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/amb"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/fire"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="fire"
                app:srcCompat="@drawable/fire"
                android:layout_height="80dp" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_ambu"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Ambulance"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_fire"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Fire"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/polic"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/poli"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/gas"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/gas"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_police"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Police"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_gas"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Gas"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/acced"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/acced"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/preg"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                app:srcCompat="@drawable/pregn"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_acced"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Accident"
                android:fontFamily="cursive"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_preg"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:layout_marginBottom="5dp"
                android:text="Pregnancy"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
